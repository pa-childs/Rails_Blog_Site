<h1 class="text-center mt-4"> <%= t('.page_title') %> </h1>

<%= render 'layouts/messages' %>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container">

  <% @categories.each do |category| %>

    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title">

              <%= link_to category.name, category_path(category), class: "article_link" %>

            </h5>
            <p class="card-text">
              <%= pluralize(category.articles.count, t('.article_text')) %>
            </p>
          </div>
          <div class="card-footer text-muted">
            <small>
              <%= t('.created_text') %> <%= time_ago_in_words(category.created_at) %> <%= t('.ago_text') %>, <%= t('.edited_text') %> <%= time_ago_in_words(category.updated_at) %> <%= t('.ago_text') %>
            </small>
          </div>
        </div>
      </div>
    </div>

  <% end %>

</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>
