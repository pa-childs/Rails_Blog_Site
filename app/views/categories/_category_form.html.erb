<div class="container">
  <div class="row justify-content-center mb-4 frame">
    <div class="col-12">

      <%= render 'shared/validations', object: @category %>
      <%= form_with(model: @category, local: true) do |f| %>

      <div class="form-group row">

        <%= f.label :name, t('.category_name_label'), class: "col-2 col-form-label" %>

        <div class="col-10">

          <%= f.text_field :name, class: "form-control", placeholder: t('.category_name_placeholder') %>
        </div>
      </div>
      <div class="form-group row justify-content-center">

        <%= f.submit(@category.new_record? ? t('.create_category_button') : t('.update_category_button'), class: "button_style") %>

        <div class="col-2">

          <%= link_to t('.cancel_button'), categories_path, class: "button_style" %>

        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>
