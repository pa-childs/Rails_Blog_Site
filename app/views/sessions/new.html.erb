<h1 class="text-center mt-4"> <%= t('.page_title') %> </h1>

<%= render 'layouts/messages' %>

<div class="container">
  <div class="row justify-content-center mb-4 frame">
    <div class="col-12">

      <%= form_with(scope: :session, url: login_path, local:true) do |f| %>

        <div class="form-group row">

          <%= f.label :email, t('.email_label'), class: "col-2 col-form-label" %>

          <div class="col-10">

            <%= f.email_field :email, class: "form-control", placeholder: t('.email_placeholder') %>

          </div>
        </div>
        <div class="form-group row">

          <%= f.label :password, t('.password_label'), class: "col-2 col-form-label" %>

          <div class="col-10">

            <%= f.password_field :password, class: "form-control", placeholder: t('.password_placeholder') %>

          </div>
        </div>
        <div class="form-group row justify-content-center">

          <%= f.submit t('.login_button'), class: "button_style" %>

        </div>

      <% end %>

    </div>
  </div>
</div>
