<div class="container">
  <div class="row justify-content-center mb-4 frame">
    <div class="col-12">

      <%= render 'shared/validations', object: @article %>
      <%= form_with(model: @article, local: true) do |f| %>

      <div class="form-group row">

        <%= f.label :title, class: "col-2 col-form-label" %>

        <div class="col-10">

          <%= f.text_field :title, class: "form-control", placeholder: "Title of Article" %>

        </div>
      </div>
      <div class="form-group row">

        <%= f.label :description, class: "col-2 col-form-label" %>

        <div class="col-10">

          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>

        </div>
      </div>
      <div class="form-group row">

        <%= f.label :category, "Categories", class: "col-2 col-form-label" %>

        <div class="col-10">

          <%= f.collection_select(:category_ids, Category.all, :id, :name, {:prompt => ""}, {:multiple => true, size: 3, class: "custom-select"}) %>


        </div>
      </div>

      <div class="form-group row justify-content-center">

        <%= f.submit class: "button_style" %>

        <div class="col-2">

          <%= link_to "Cancel", articles_path, class: "button_style" %>

        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>
